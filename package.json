{
  "name": "leafer-editor",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vue-tsc -b && vite build",
    "ci:eslint": "eslint -f json src -o ./.ci/eslint.json",
    "dev": "vite",
    "lint": "eslint . && stylelint \"**/*.{css,less,scss}\"",
    "lint:fix": "prettier --write . && eslint --fix . && stylelint --fix \"**/*.{css,less,scss}\"",
    "preview": "vite preview"
  },
  "prettier": "prettier-config-ali",
  "eslintConfig": {
    "extends": [
      "ali/typescript/vue",
      "plugin:prettier/recommended"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-ali",
      "stylelint-prettier/recommended"
    ]
  },
  "dependencies": {
    "@flatten-js/core": "^1.6.2",
    "@leafer-in/view": "^1.4.0",
    "ant-design-vue": "3.2.20",
    "leafer-editor": "^1.3.3",
    "leafer-x-dot-matrix": "^1.0.2",
    "leafer-x-snap": "^1.0.7",
    "lodash-es": "^4.17.21",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^8.56.0",
    "eslint-config-ali": "^15.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "prettier-config-ali": "^1.3.2",
    "stylelint": "^16.12.0",
    "stylelint-config-ali": "^2.1.1",
    "stylelint-prettier": "^5.0.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-plugin-checker": "^0.8.0",
    "vue-tsc": "~2.1.6"
  }
}
